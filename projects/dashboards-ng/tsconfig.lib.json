{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declaration": true,
    "inlineSources": true,
    "types": ["@siemens/element-translate-ng/localize-types"],
    "paths": {
      "@siemens/element-translate-ng": ["dist/@siemens/element-translate-ng"],
      "@siemens/element-translate-ng/*": ["dist/@siemens/element-translate-ng/*"],
      "@siemens/element-ng": ["dist/@siemens/element-ng"],
      "@siemens/element-ng/*": ["dist/@siemens/element-ng/*"],
      "@siemens/dashboards-ng": ["projects/dashboards-ng/src/public-api.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "compilationMode": "partial"
  },
  "include": ["./**/*.ts"],
  "exclude": ["**/*.spec.ts", "test"]
}
